# Set the default behavior to automatically normalize line endings.
* text=auto

# Explicitly declare text files you want to always be normalized and converted to native line endings on checkout.
*.c text
*.h text
*.cpp text
*.hpp text
*.java text
*.cs text
*.py text
*.js text
*.html text
*.css text
*.md text
*.yaml text
*.yml text
*.xml text
*.txt text

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.exe binary
*.dll binary

# Specific files that should always have LF line endings.
*.sh text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Specific files that should always have CRLF line endings.
*.bat text eol=crlf
*.cmd text eol=crlf

# Generated files - keep their existing line endings
linux/flutter/generated_plugin_registrant.cc -text
linux/flutter/generated_plugin_registrant.h -text
linux/flutter/generated_plugins.cmake -text
macos/Flutter/GeneratedPluginRegistrant.swift -text
windows/flutter/generated_plugin_registrant.cc -text
windows/flutter/generated_plugin_registrant.h -text
windows/flutter/generated_plugins.cmake -text
 # Auto detect text files and perform LF normalization
*        text=auto

# Always perform LF normalization on these files
*.dart   text
*.gradle text
*.html   text
*.java   text
*.json   text
*.md     text
*.py     text
*.sh     text
*.txt    text
*.xml    text
*.yaml   text

# Make sure that these Windows files always have CRLF line endings in checkout
*.bat             text eol=crlf
*.ps1             text eol=crlf
*.rc              text eol=crlf
*.sln             text eol=crlf
*.props           text eol=crlf
*.vcxproj         text eol=crlf
*.vcxproj.filters text eol=crlf
# Including templatized versions.
*.sln.tmpl        text eol=crlf
*.props.tmpl      text eol=crlf
*.vcxproj.tmpl    text eol=crlf

# Never perform LF normalization on these files
*.ico    binary
*.jar    binary
*.png    binary
*.zip    binary